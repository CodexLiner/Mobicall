<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="10dp"
    android:background="@drawable/dialog_shape"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filters"
                android:layout_weight="1"/>
            <TextView
               android:visibility="gone"
                android:textColor="@color/main2"
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort By"/>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/sortName"
                android:layout_margin="10sp"
                android:background="@drawable/fill_shape"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:drawableStartCompat="@drawable/ic_arasko_up"
                    app:drawableEndCompat="@drawable/ic_arasko_down" />
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Name" />
                <TextView
                    android:textSize="11sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="A-Z" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/sortDateDown"
                android:layout_margin="10sp"
                android:background="@drawable/fill_shape"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:drawableEndCompat="@drawable/ic_arasko_down"
                    app:drawableStartCompat="@drawable/ic_arasko_stairs" />
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Date" />
                <TextView
                    android:textSize="11sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="New to Old" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/sortDateUp"
                android:layout_margin="10sp"
                android:background="@drawable/fill_shape"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:drawableStartCompat="@drawable/ic_arasko_stairs"
                    app:drawableEndCompat="@drawable/ic_arasko_up" />
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Date" />
                <TextView
                    android:textSize="11sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Old to New" />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by Status"/>
        <LinearLayout
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/sortConnected"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/fill_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connected"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sortNotconnected"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/fill_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Connected"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sortIntrested"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/fill_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interested"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/sortNotIntrested"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="0sp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/fill_shape"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <TextView
                android:layout_margin="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Interested"/>
        </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <androidx.appcompat.widget.AppCompatButton
               android:textColor="@color/white"
               android:background="@drawable/button_shape"
               android:layout_weight="1"
               android:id="@+id/closeButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="end"
               android:layout_marginEnd="10dp"
               android:layout_marginBottom="5dp"
               android:text="Cancel"/>
           <androidx.appcompat.widget.AppCompatButton
               android:textColor="@color/white"
               android:background="@drawable/button_shape_green"
               android:layout_weight="1"
               android:id="@+id/buttonSubmit"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="end"
               android:layout_marginEnd="10dp"
               android:layout_marginBottom="5dp"
               android:text="Done"/>
       </LinearLayout>
    </LinearLayout>


</LinearLayout>