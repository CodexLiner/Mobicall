<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragments.MenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/main_background_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="0dp">
                <TextView
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Menu"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:fontFamily="sans-serif"
                    android:textSize="23sp"/>


            </LinearLayout>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/whatsapp"
            android:layout_margin="10dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/whatsapp"/>

            <TextView
                android:fontFamily="@font/poppins_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end|center"
                android:layout_marginStart="75dp"
                android:gravity="start|center"
                android:text="Whatsapp Templates" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/email"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/gmail"/>

            <TextView
                android:fontFamily="@font/poppins_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end|center"
                android:layout_marginStart="75dp"
                android:gravity="start|center"
                android:text="Email Templates" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/sms"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/chat"/>

            <TextView
                android:fontFamily="@font/poppins_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end|center"
                android:layout_marginStart="75dp"
                android:gravity="start|center"
                android:text="SMS Templates" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/helpFeedback"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/positive"/>

            <TextView
                android:fontFamily="@font/poppins_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end|center"
                android:layout_marginStart="75dp"
                android:gravity="start|center"
                android:text="Feedback &amp; Complaints" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/share"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_gravity="start|center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/next"/>

            <TextView
                android:fontFamily="@font/poppins_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end|center"
                android:layout_marginStart="75dp"
                android:gravity="start|center"
                android:text="Share" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>